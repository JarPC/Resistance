<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.com.jaymi.resistance.ayuda.UnoFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:layout_marginTop="50dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GUIA DE USO DE APLICACIÓN"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:textSize="25dp"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ayudaa"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center" />


            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="30dp"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:scrollbars="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="122dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Paso 1:"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:id="@+id/textView"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/imageView"
                        android:textColor="#2449ef"
                        android:linksClickable="false"
                        android:longClickable="false"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Para poder calcular el valor de una resistencia se abrirá la cámara dando clic en el botón de camara que se encuentra en la pantalla principal."
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:typeface="normal"
                        android:layout_gravity="center_vertical|right"
                        android:id="@+id/textView6"
                        android:layout_below="@+id/textView"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:textSize="20dp" />


                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/camara"
                        android:id="@+id/imageView0"
                        android:scaleType="centerInside"
                        android:layout_gravity="center" />


                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
